@model NawiWebAdmin.Models.Evento

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">✨ Crear Nuevo Evento</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Fecha</label>
                        <input asp-for="Fecha" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Hora</label>
                        <input asp-for="Hora" type="time" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Lugar</label>
                    <input asp-for="Lugar" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Costo</label>
                    <input asp-for="Costo" class="form-control" placeholder="Ej: Gratis o $5.000" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">ID Categoría</label>
                        <input asp-for="IdCategoria" type="number" class="form-control" value="1" />
                        <small class="text-muted">1:Cultural, 2:Recreativo...</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="Cancelado">Cancelado</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success">Guardar Evento</button>
                </div>
            </form>
        </div>
    </div>
</div>