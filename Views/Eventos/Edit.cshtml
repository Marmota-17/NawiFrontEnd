@model NawiWebAdmin.Models.Evento

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">✏️ Editar Evento</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="IdEvento" />
                <input type="hidden" asp-for="FlyerUrl" /> <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Fecha</label>
                        <input asp-for="Fecha" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Hora</label>
                        <input asp-for="Hora" type="time" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Lugar</label>
                    <input asp-for="Lugar" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Costo</label>
                    <input asp-for="Costo" class="form-control" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Categoría</label>

                        <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.Categorias">
                            <option value="">-- Selecciona una --</option>
                        </select>

                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="Cancelado">Cancelado</option>
                            <option value="Finalizado">Finalizado</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-warning">Actualizar Evento</button>
                </div>
            </form>
        </div>
    </div>
</div>